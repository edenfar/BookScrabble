<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="server.Player" table="PLAYERS">
        <id name="id" type="java.lang.Integer" column="id" access="field">
            <generator class="increment"/>
        </id>
        <property name="name" type="java.lang.String" column="name" access="field" length="20"/>
        <property name="score" type="java.lang.Integer" column="score" access="field"/>
        <property name="tiles" type="java.io.Serializable" column="tiles" access="field" length="10000"/>
    </class>
</hibernate-mapping>
